# ==============================================
# CONFIGURAÇÕES ESPECÍFICAS DO SISTEMA
# ==============================================

# Orçamentos
ORCAMENTO_VALIDADE_PADRAO=30
ORCAMENTO_DESCONTO_MAXIMO=50

# Upload de Arquivos
