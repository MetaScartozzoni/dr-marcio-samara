# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis (optional - for BullMQ queue)
# If not set, system will use jobs table polling fallback
# REDIS_URL=redis://localhost:6379

# Queue Configuration (for polling mode)
# Trade-off: Shorter interval = faster job processing but higher DB load
# Longer interval = lower DB load but delayed processing
# Recommended: 5000ms (5s) for development, 3000ms (3s) for production
POLL_INTERVAL_MS=5000

# PDF Generation
PDF_STORAGE_PATH=/tmp/pdfs
LOGO_URL=https://example.com/logo.png

# Email Notifications - SendGrid (recommended)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
# SENDGRID_FROM_EMAIL=noreply@drmarcio.com.br

# Email Notifications - SMTP (alternative)
# SMTP_HOST=smtp.hostinger.com
# SMTP_PORT=587
# SMTP_USER=seu-email@seudominio.com.br
# SMTP_PASS=sua-senha
# SMTP_FROM=noreply@seudominio.com.br
# SMTP_SECURE=false

# SMS Notifications - Twilio (optional)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM=+5511999999999

# Notification Settings
# When enabled, sends email to patient when PDF generation completes
# Email includes orcamento number, total value, and link to view details
SEND_NOTIFICATION_ON_PDF=false

# AWS S3 (optional - for production PDF storage)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Application
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
